mixin promotion-item(content, title, src)
  - if (typeof(src) === 'undefined') src = 'images/upload/banner-thumb-1.jpg'
  - if (typeof(title) === 'undefined') title = '5% Weekend Cashback is BACK!'
  - if (typeof(content) === 'undefined') content = 'Earn up to RM50 cashback for all your weekend spending'
    .box-default&attributes(attributes)
      .thumb(style="background-image: url(#{src})")
      h3 #{title}
      .info
        p #{content}
      .bottom-box
        +link('DISCOVER','promotion-detail.html').btn.btn-default.btn-block

