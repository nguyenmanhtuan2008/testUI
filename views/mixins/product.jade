mixin announcement-item(time, title, content)
  - if (typeof(time) === 'undefined') time = '19 SEP 2016'
  - if (typeof(title) === 'undefined') title = 'Suspension of AS1M transactions via Maybank2u'
  - if (typeof(content) === 'undefined') content = 'We would like to inform you that Amanah Saham 1Malaysia (AS1M) transactions via Maybank2u will not be available from 19 September 2016 (Tuesday), 5:01pm till 3 October 2016 (Monday), 12:00am.'
    .box-default.height-3
      .time #{time}
      h3.yellow-line #{title}
      .info
        p #{content}
      .bottom-box
        +link('READ MORE','announcement-detail.html').btn.btn-default.btn-block


mixin reward-item(title, src, reward, point1, point2, content)
  - if (typeof(src) === 'undefined') src = 'images/upload/Asus-Zenfone-3.jpg'
  - if (typeof(title) === 'undefined') title = 'ASUS ZenFone HD 2'
  - if (typeof(point1) === 'undefined') point1 = '5,670'
  - if (typeof(point2) === 'undefined') point2 = '2,500'
  - if (typeof(reward) === 'undefined') reward = 'ELECTRONICS'
  - if (typeof(content) === 'undefined') content = 'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed viverra arcu enim quellaram.'
    +link(title,'reward-detail.html').box-default.box-primary
      .thumb(style="background-image: url(#{src})")
        span.photo-note #{reward}
      h3 #{title}
      .info.light-color
        p.point
          span #{point1}
          | Points (HE1738)
        p.point
          span #{point2}
          | Points + RM 158 (HE1123)
        p #{content}

